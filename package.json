{
  "name": "lithos",
  "version": "0.1.0",
  "description": "Transform Obsidian vaults into beautiful documentation sites using Docus",
  "bin": {
    "lithos": "./bin/lithos.mjs"
  },
  "scripts": {
    "dev": "node bin/lithos.mjs dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' nuxt build --extends docus",
    "generate": "NODE_OPTIONS='--max-old-space-size=8192' node bin/lithos.mjs generate",
    "preview": "nuxt preview",
    "cleanup": "node bin/lithos.mjs cleanup",
    "lithos": "node bin/lithos.mjs"
  },

  "dependencies": {
    "@barzhsieh/nuxt-content-mermaid": "^2.2.1",
    "@nuxt/ui": "^4.4.0",
    "@portaljs/remark-wiki-link": "^1.2.0",
    "abcjs": "^6.6.0",
    "better-sqlite3": "^12.5.0",
    "docus": "latest",
    "force-graph": "^1.51.0",
    "js-yaml": "^4.1.1",
    "katex": "^0.16.27",
    "monaco-editor": "^0.55.1",
    "nuxt": "^4.2.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "unist-util-visit": "^5.1.0",
    "vue-force-graph": "^0.1.2"
  },
  "license": "MIT",
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.87",
    "@nuxt/icon": "^1.10.3",
    "@types/js-yaml": "^4.0.9",
    "lucide-vue-next": "^0.563.0"
  }
}
